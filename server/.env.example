PORT=3000
MONGODB_URI=mongodb://localhost:27017/performance-testing
NODE_ENV=development

# JWT Configuration
# IMPORTANT: Use a strong, random secret key in production (minimum 32 characters)
# You can generate one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-minimum-32-characters
JWT_EXPIRES_IN=7d

# Mail Configuration (Mailtrap for development)
MAIL_HOST=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USER=your_mailtrap_username
MAIL_PASS=your_mailtrap_password
MAIL_FROM=noreply@perftesting.com

# ===========================================
# GOOGLE CLOUD STORAGE CONFIGURATION
# ===========================================
# Google Cloud Project ID
GCP_PROJECT_ID=your-gcp-project-id

# GCS Bucket Name for storing device log files
GCS_BUCKET_NAME=performance-testing-device-logs

# Service account credentials as JSON string (recommended for deployment)
# To use: Set the entire service account JSON as a single-line string
# Example: GCP_CREDENTIALS='{"type":"service_account","project_id":"...","private_key":"..."}'
# Download key from: https://console.cloud.google.com/iam-admin/serviceaccounts
GCP_CREDENTIALS=

# For Cloud Run, authentication is automatic (no need to set credentials)
# For local development with gcloud CLI, credentials are auto-detected
